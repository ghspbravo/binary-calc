//ColorSheme
$bgColor = #F5F5F6
$pColor = #5d34af
$pLightColor = #9061e2
$pDarkColor = #27057f
$fontColor = #fff
$fontDarkColor = #E1E2E1

//Sizes
$dWidth = 40em
$dHeight = 25em

#root 
    background-color: $bgColor;
    color: $fontColor;

.App {
  margin: auto;
  width: $dWidth;
  height: $dHeight;
  background-color: $pColor;
}


.display
    text-align: right;
    padding: 10px 20px;
    background-color: $pDarkColor

.display:hover
    cursor: default;

.display .expression
    font-size 2rem;
    color: $fontDarkColor;

.display .currentValue
    font-size: 4rem;


.panelWrapper
    display flex
    flex-wrap: wrap
    padding 20px 10px

.btn
    background-color $pLightColor
    margin: 7px 10px
    padding 10px 0
    box-shadow: 1px 1px 0.5px black
    transition: background-color 0.5s
    text-align center
    font-weight bold
    font-size: 2em
    user-select none

.btn:hover
    cursor pointer
    background-color: lightness($pLightColor, 70%)

.btn:active
    background-color: lightness($pLightColor, 85%)
    box-shadow: none

.btn-sm
    width 75px

.btn-lg
    width 170px